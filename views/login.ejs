 <div class="container-lg d-flex justify-content-center">
  <div class="card mx-9 lg-12 mx-md-5 shadow-5-strong" id="card">
    <div class="card-body px-md-5 align-center">
      <h2 class="fw-bold mb-5">Login</h2>



      <form method="post" action="/login" style="text-align: left">
        <div class="form-outline mb-4">
          <label for="username">Username:</label>
          <input type="text" id="username" name="username" required class="form-control">

        </div>

        <div class="form-outline mb-4">
          <label for="email">Email:</label>:</label>
          <input type="email" id="email" name="email" required class="form-control">

        </div>

        <div class="form-outline mb-4">
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required class="form-control">

        </div>
        <span style=" display: flex;align-items: center;width: 100%; color: red;">
          <p>

            <% if (locals.alreadyexist) {%>
              alreadyexist
              <% }else {} %>
          </p>
        </span>
        <button type="submit" class="btn btn-primary btn-block mb-4 ">
          Log-in
        </button>
        <br> Not logged in ? <a href="/register">Register</a>
      </form>


    </div>
  </div>
 </div>
  
